{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo run release",
            "command": "cargo",
            "args": [
                "run",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "cargo rustc emit asm",
            "command": "cargo",
            "args": [
                "rustc",
                "--release",
                "--",
                "--emit",
                "asm"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}